extends layout

block content
    h1 #{title}

    form(action="", method="post")
        div.form-group
            label(for='name') Tag:
            input#name.form-control(type='text', placeholder='Sci-Fi, Documentary, etc.', name='name', value=(undefined===tag ? '' : tag.name))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
