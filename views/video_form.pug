extends layout

block content
    h1= title

    form(method='POST', action='')
        div.form-group
            label(for='link') Youtube link:
            input#link.form-control(type='text', name='link', required='true')
        button.btn.btn-primary(type='submit') Submit

        if errors 
            ul
                for error in errors
                    li!= error.msg
